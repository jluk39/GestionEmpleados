<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/nombreEmpleadoInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el nombre" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/apellidoEmpleadoInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el apellido" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DNI"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/dniEmpleadoInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el DNI"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Especialidad"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/especialidadEmpleadoSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turno"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/turnoEmpleadoSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salario/Hora"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/salarioEmpleadoInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el salario por hora"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/saveEmpleadoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/button_primary"
        android:textColor="@color/button_primary_text" />

    <Button
        android:id="@+id/cancelEmpleadoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/deleteEmpleadoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF" />
</LinearLayout>


