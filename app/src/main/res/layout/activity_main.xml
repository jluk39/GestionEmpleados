<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:textSize="12sp"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp" />

    <!-- Nuevo título del portal -->
    <TextView
        android:id="@+id/portalTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Portal Gerencia - Restaurante Chefcito"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/logoutButton"
        android:layout_marginBottom="8dp"
        android:textColor="#212121" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@id/portalTitle"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:id="@+id/adminImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/logo"
        android:layout_below="@id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:contentDescription="Imagen de administrador" />

    <Button
        android:id="@+id/crudUsuariosButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestionar Usuarios"
        android:layout_below="@id/adminImage"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/button_primary"
        android:textColor="@color/button_primary_text" />

    <Button
        android:id="@+id/crudEmpleadosButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestionar Empleados"
        android:layout_below="@id/crudUsuariosButton"
        android:backgroundTint="@color/button_primary"
        android:textColor="@color/button_primary_text" />
</RelativeLayout>


